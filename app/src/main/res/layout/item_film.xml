<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <ImageView
        android:id="@+id/filmPoster"
        android:layout_width="130dp"
        android:layout_height="180dp"
        android:paddingRight="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/filmTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@id/filmYear"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/filmPoster"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/filmYear"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/filmPoster"
        app:layout_constraintEnd_toEndOf="@id/filmGenres"
        app:layout_constraintStart_toEndOf="@id/filmPoster"
        app:layout_constraintTop_toBottomOf="@id/filmTitle" />


    <TextView
        android:id="@+id/filmGenres"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@id/filmPoster"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/filmYear"
        app:layout_constraintTop_toBottomOf="@id/filmTitle" />

</androidx.constraintlayout.widget.ConstraintLayout>